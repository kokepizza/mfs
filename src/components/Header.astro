---
const pathname = Astro.url.pathname;
const currentPath = pathname !== '/' && pathname.endsWith('/')
  ? pathname.slice(0, -1)
  : pathname;
---

<header class="header">
  <a href="/" class={currentPath === '/' ? 'current-page' : ''}>Feed</a>
  <a href="/work-list" class={currentPath === '/work-list' ? 'current-page' : ''}>List</a>
  <a href="/about" class={currentPath === '/about' ? 'current-page' : ''}>About</a>
  <a href="/contact" class={currentPath === '/contact' ? 'current-page' : ''}>Contact</a>
</header>

<style is:inline>
  header {
      position: fixed;
      padding: var(--padding);
      width: 100%;
      display: flex;
      justify-content: space-between;
      z-index: 100;
      text-transform: uppercase;
      font-size: .75rem;
      color: var(--gray);
      view-transition-name: header;
  }

  header a {
    transition: color .3s var(--ease);
  }

  header a:hover {
    color: var(--white);
  }

  .current-page {
    color: var(--white);
  }

</style>