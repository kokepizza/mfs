---
const pathname = Astro.url.pathname;
const currentPath = pathname !== '/' && pathname.endsWith('/')
  ? pathname.slice(0, -1)
  : pathname;
---

<header class="header">
  <a href="/" class={currentPath === '/' ? 'current-page' : ''}>Feed</a>
  <a href="/work-list" class={currentPath === '/work-list' ? 'current-page' : ''}>List</a>
  <a href="/about" class={currentPath === '/about' ? 'current-page' : ''}>About</a>
  <a href="/contact" class={currentPath === '/contact' ? 'current-page' : ''}>Contact</a>
</header>

<style is:inline>
  header {
    position: fixed;
    left: 50%;
    transform: translateX(-50%);
    padding: var(--padding);
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 100;
    text-transform: uppercase;
    font-size: .8rem;
    color: var(--gray);
    view-transition-name: header;
  }

  header a {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.3s ease;
  }

  header a::after {
    content: '';
    width: .8rem;
    height: .8rem;
    border-radius: 50%;
    border: 1px solid var(--gray);
    transition: all 0.3s ease;
    order: -1;
  }

  header a:hover {
    color: var(--white);
  }

  .current-page {
    color: var(--white);
  }

  .current-page::after {
    background-color: var(--white);
    border-color: var(--white);
  }

  @media (min-width: 1024px) {
    header {
      left: auto;
      right: 0;
      top: 6.5rem;
      transform: none;
      flex-direction: column;
      align-items: flex-end;
      gap: 1rem;
    }

    header a::after {
      order: 1;
    }
  }
</style>